<p id="notice"><%= notice %></p>

<h1>Loans</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Employee</th>
      <th>Date</th>
      <th>Value</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @loans.each do |loan| %>
      <tr>
        <td><%= loan.id %></td>
        <td><%= loan.employee.name %></td>
        <td><%= loan.date %></td>
        <td><%= loan.value %></td>
        <td><%= loan.active ? 'Active' : 'Paid' %></td>
        <td><%= link_to 'Show', loan %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Loan', new_loan_path %>
